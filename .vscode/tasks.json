{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension in Background",
      "group": "build",
      "type": "npm",
      "script": "watch",
      "path": ".",
      "dependsOn": ["Install npm dependencies"],
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/"]
      },
      "isBackground": true
    },
    {
      "label": "Build Extension",
      "group": "build",
      "type": "npm",
      "script": "build",
      "path": ".",
      "dependsOn": ["Install npm dependencies"],
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceFolder}/"]
      }
    },
    {
      "label": "Install npm dependencies",
      "type": "shell",
      "command": "npm ci",
      "problemMatcher": [],
      "detail": "perform npm clean install"
    }
  ]
}
