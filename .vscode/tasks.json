// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension in Background",
      "group": "build",
      "type": "npm",
      "script": "watch",
      "path": ".",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/"]
      },
      "isBackground": true
    },
    {
      "label": "Build Extension",
      "group": "build",
      "type": "npm",
      "script": "build",
      "path": ".",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceFolder}/"]
      }
    },
    {
      "label": "Pretest",
      "group": "build",
      "isBackground": false,
      "type": "npm",
      "script": "pretest",
      "path": ".",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceFolder}/"]
      }
    }
  ]
}
